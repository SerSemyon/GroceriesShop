@model IEnumerable<GroceriesShop.Models.ShoppingCart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button onclick="handlerEdit()">Изменить</button>
    <button onclick="handlerDetails()">Подробнее</button>
    <button onclick="handlerDelete()">Удалить</button>
    <button onclick="handlerCreate()">Создать</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="selectRow(@item.Id)" id="@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Account.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Id)
            </td>
        </tr>
}
    </tbody>
</table>


@section Scripts {
    <script>
        var selectedId;
        function selectRow(idObject) {
            if (selectedId) {
                document.getElementById(selectedId).className = "";
            }
            selectedId = idObject;
            document.getElementById(idObject).className = "active-row";
        }

        function handlerDetails() {
            if (selectedId) {
                window.location.href = "/ShoppingCarts/Details/" + selectedId;
            }
        }

        function handlerDelete() {
            if (selectedId) {
                window.location.href = "/ShoppingCarts/Delete/" + selectedId;
            }
        }

        function handlerEdit() {
            if (selectedId) {
                window.location.href = "/ShoppingCarts/Edit/" + selectedId;
            }
        }

        function handlerCreate() {
            window.location.href = "/ShoppingCarts/Create";
        }
    </script>
}